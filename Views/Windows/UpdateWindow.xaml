<ui:FluentWindow
    x:Class="QuickShare.Views.Windows.UpdateWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuickShare.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="{DynamicResource UpdateWindow_Text_Title}"
    Width="600"
    Height="400"
    d:DesignHeight="400"
    d:DesignWidth="600"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ui:TitleBar
            x:Name="TitleBar"
            Title="{DynamicResource UpdateWindow_Text_Title}"
            Grid.Row="0"
            CloseWindowByDoubleClickOnIcon="True">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/Assets/app-icon-512.png" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>
        <ui:TextBlock
            x:Name="VersionTextBlock"
            Grid.Row="0"
            Margin="15,50,15,10"
            FontSize="24"
            FontWeight="Bold" />
        <FlowDocumentScrollViewer
            x:Name="UpdateLogViewer"
            Grid.Row="1"
            Margin="15,10,15,10" />
        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <ui:HyperlinkButton
                x:Name="GithubDownloadButton"
                Height="34"
                Margin="0,10,20,20"
                Appearance="Primary"
                Content="{DynamicResource UpdateWindow_Button_GithubDownload}" />
            <ui:HyperlinkButton
                x:Name="SourceForgeDownloadButton"
                Height="34"
                Margin="0,10,20,20"
                Appearance="Primary"
                Content="{DynamicResource UpdateWindow_Button_SourceForgeDownload}" />
            <ui:Button
                Grid.Row="2"
                Height="34"
                Margin="0,10,20,20"
                HorizontalAlignment="Right"
                Appearance="Primary"
                Click="Button_Click"
                Content="{DynamicResource UpdateWindow_Button_IgnoreUpdate}" />
        </StackPanel>
    </Grid>
</ui:FluentWindow>
