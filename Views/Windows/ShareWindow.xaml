<ui:FluentWindow
    x:Class="QuickShare.Views.Windows.ShareWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:QuickShare.Helpers"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:QuickShare.ViewModels.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="{DynamicResource ShareWindow_Text_Title}"
    Width="600"
    Height="540"
    MinWidth="600"
    MinHeight="540"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Background="{DynamicResource ApplicationBackgroundBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <helpers:InvertedBooleanToVisibilityConverter x:Key="InvertedBooleanToVisibilityConverter" />
    </Window.Resources>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ui:TitleBar
            x:Name="TitleBar"
            Title="{DynamicResource ShareWindow_Text_Title}"
            Grid.Row="0"
            CloseWindowByDoubleClickOnIcon="True">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/Assets/app-icon-512.png" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>
        <Grid Grid.Row="1" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ui:TextBlock
                Grid.Row="0"
                Margin="0,24,0,12"
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Text="{DynamicResource ShareWindow_Text_TopTip}" />
            <ui:Image
                Grid.Row="1"
                Width="200"
                Height="200"
                HorizontalAlignment="Center"
                Source="{Binding QrCodeImage}" />
            <StackPanel
                Grid.Row="2"
                Margin="0,12,0,12"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <ui:HyperlinkButton Padding="12,8,12,8" NavigateUri="{Binding Url}">
                    <ui:TextBlock
                        MaxWidth="300"
                        Text="{Binding Url}"
                        TextTrimming="CharacterEllipsis" />
                </ui:HyperlinkButton>
                <ui:Button
                    Padding="8"
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding CopyUrlCommand}"
                    Icon="{ui:SymbolIcon Symbol=Copy24}" />
            </StackPanel>
            <StackPanel
                Grid.Row="3"
                Margin="0,12,0,12"
                HorizontalAlignment="Center"
                Orientation="Horizontal"
                Visibility="{Binding EnableMdns, Converter={StaticResource InvertedBooleanToVisibilityConverter}}">
                <ui:TextBlock VerticalAlignment="Center" Text="{DynamicResource ShareWindow_Text_SelectIp}" />
                <ComboBox
                    MinWidth="200"
                    Margin="8,0,0,0"
                    DisplayMemberPath="DisplayString"
                    ItemsSource="{Binding ActivedNetworks}"
                    SelectedItem="{Binding SelectedNetwork}" />
                <ui:Button
                    Margin="4,0,0,0"
                    Padding="8"
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding RefreshNetworkCommand}"
                    Icon="{ui:SymbolIcon Symbol=ArrowSync24}" />
            </StackPanel>
            <StackPanel
                Grid.Row="4"
                Margin="0,12,0,12"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <StackPanel Orientation="Horizontal">
                    <ui:TextBlock VerticalAlignment="Center" Text="{DynamicResource ShareWindow_Text_EnableMdns}" />
                    <ui:ToggleSwitch
                        Margin="8,0,0,0"
                        Command="{Binding EnableMdnsCommand}"
                        IsChecked="{Binding EnableMdns}"
                        ToolTip="{DynamicResource ShareWindow_ToolTip_EnableMdns}"
                        ToolTipService.InitialShowDelay="0" />
                </StackPanel>
                <StackPanel Margin="48,0,0,0" Orientation="Horizontal">
                    <ui:TextBlock VerticalAlignment="Center" Text="{DynamicResource ShareWindow_Text_ShareEdit}" />
                    <ui:Button
                        Margin="8,0,0,0"
                        Command="{Binding OpenEditDialogCommand}"
                        Icon="{ui:SymbolIcon Symbol=Edit24}" />
                </StackPanel>
            </StackPanel>
            <ui:TextBlock
                Grid.Row="5"
                Margin="0,12,0,24"
                HorizontalAlignment="Center"
                FontSize="16"
                FontWeight="Bold"
                Foreground="OrangeRed"
                Text="{DynamicResource ShareWindow_Text_BottomTip}" />
        </Grid>
    </Grid>
</ui:FluentWindow>
