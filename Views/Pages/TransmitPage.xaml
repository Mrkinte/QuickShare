<Page
    x:Class="QuickShare.Views.Pages.TransmitPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:QuickShare.Helpers"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:QuickShare.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:QuickShare.Models"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DataContext="{d:DesignInstance local:TransmitPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">
    <Page.Resources>
        <helpers:InvertedBooleanToVisibilityConverter x:Key="InvertedBooleanToVisibilityConverter" />
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ui:TextBlock
                Grid.Column="1"
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Text="{DynamicResource Transmit_Text_TopTip}" />
            <StackPanel
                Grid.Column="2"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <ui:Button
                    Padding="8"
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding OpenUploadFolderCommand}"
                    Icon="{ui:SymbolIcon Symbol=Folder24}"
                    ToolTip="{DynamicResource Transmit_ToolTip_OpenUploadDir}"
                    ToolTipService.InitialShowDelay="0" />
            </StackPanel>
        </Grid>
        <ui:Image
            Grid.Row="1"
            Width="200"
            Height="200"
            Margin="0,12,0,12"
            HorizontalAlignment="Center"
            Source="{Binding QrCodeImage}" />
        <StackPanel
            Grid.Row="2"
            Margin="0,12,0,12"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <ui:HyperlinkButton
                Padding="12,8,12,8"
                Content="{Binding Url}"
                NavigateUri="{Binding Url}" />
            <ui:Button
                Padding="8"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding CopyUrlCommand}"
                Icon="{ui:SymbolIcon Symbol=Copy24}" />
        </StackPanel>
        <StackPanel
            Grid.Row="3"
            Margin="0,12,0,12"
            HorizontalAlignment="Center"
            Orientation="Horizontal"
            Visibility="{Binding EnableMdns, Converter={StaticResource InvertedBooleanToVisibilityConverter}}">
            <ui:TextBlock VerticalAlignment="Center" Text="{DynamicResource Transmit_Text_SelectIp}" />
            <ComboBox
                MinWidth="200"
                Margin="8,0,0,0"
                DisplayMemberPath="DisplayString"
                ItemsSource="{Binding ActivedNetworks}"
                SelectedItem="{Binding SelectedNetwork}" />
            <ui:Button
                Margin="4,0,0,0"
                Padding="8"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding RefreshNetworkCommand}"
                Icon="{ui:SymbolIcon Symbol=ArrowSync24}" />
        </StackPanel>
        <StackPanel
            Grid.Row="4"
            Margin="0,12,0,12"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <ui:TextBlock Text="{DynamicResource Transmit_Text_EnableMdns}" />
            <ui:ToggleSwitch
                Margin="8,0,0,0"
                Command="{Binding EnableMdnsCommand}"
                IsChecked="{Binding EnableMdns}"
                ToolTip="{DynamicResource Transmit_ToolTip_EnableMdns}"
                ToolTipService.InitialShowDelay="0" />
        </StackPanel>
        <ui:TextBlock
            Grid.Row="5"
            Margin="0,12,0,48"
            HorizontalAlignment="Center"
            FontSize="16"
            FontWeight="Bold"
            Foreground="OrangeRed"
            Text="{DynamicResource Transmit_Text_BottomTip}" />
    </Grid>
</Page>
