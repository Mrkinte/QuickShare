<Page
    x:Class="QuickShare.Views.Pages.SharePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuickShare.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="SharePage"
    d:DataContext="{d:DesignInstance local:SharePage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <ui:TextBlock
                    Margin="0,0,8,0"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Text="{DynamicResource Share_Text_SelectFile}" />
                <ui:Button
                    Appearance="Primary"
                    Command="{Binding CreateShareCommand}"
                    Content="{DynamicResource Share_Button_SelectFile}" />
            </StackPanel>
        </Grid>
        <ui:DataGrid
            Grid.Row="1"
            Margin="0,24,0,24"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            ItemsSource="{Binding ShareHistories, Mode=OneWay}">
            <!--  Style  -->
            <DataGrid.ColumnHeaderStyle>
                <Style BasedOn="{StaticResource DefaultDataGridColumnHeaderStyle}" TargetType="DataGridColumnHeader">
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.CellStyle>
                <Style BasedOn="{StaticResource DefaultDataGridCellStyle}" TargetType="DataGridCell">
                    <Setter Property="HorizontalAlignment" Value="Center" />
                </Style>
            </DataGrid.CellStyle>

            <!--  Content  -->
            <ui:DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding CreateTime, Mode=OneWay}"
                    Header="{DynamicResource Share_DataGrid_CreateTime}"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding FileCount, Mode=OneWay}"
                    Header="{DynamicResource Share_DataGrid_FileCount}"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Description, Mode=OneWay}"
                    Header="{DynamicResource Share_DataGrid_Description}"
                    IsReadOnly="True" />
                <DataGridTemplateColumn Width="Auto" Header="{DynamicResource Share_DataGrid_Operation}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <ui:Button
                                    Command="{Binding DataContext.OpenEditDialogCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"
                                    Content="{DynamicResource Share_Button_Edit}"
                                    Icon="{ui:SymbolIcon Symbol=Edit24}" />
                                <ui:Button
                                    Margin="12,0,0,0"
                                    Command="{Binding DataContext.OpenShareDialogCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"
                                    Content="{DynamicResource Share_Button_Share}"
                                    Icon="{ui:SymbolIcon Symbol=Share24}" />
                                <ui:Button
                                    Margin="12,0,0,0"
                                    Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"
                                    Content="{DynamicResource Share_Button_Delete}"
                                    Icon="{ui:SymbolIcon Symbol=Delete24}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </ui:DataGrid.Columns>
        </ui:DataGrid>
    </Grid>
</Page>
