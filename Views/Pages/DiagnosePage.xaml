<Page
    x:Class="QuickShare.Views.Pages.DiagnosePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuickShare.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sc="clr-namespace:QuickShare.Controls"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DebugPage"
    d:DataContext="{d:DesignInstance local:DiagnosePage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <sc:DiagnoseCard
                Title="{DynamicResource Diagnose_Text_ServerStatus}"
                DiagnoseColor="{Binding WebServerDiagnoseColor}"
                DiagnoseDetail="{Binding WebServerDiagnoseDetail}"
                DiagnoseStatus="{Binding WebServerDiagnoseStatus}" />
            <sc:DiagnoseCard
                Title="{DynamicResource Diagnose_Text_FirewallStatus}"
                Margin="0,8,0,0"
                DiagnoseColor="{Binding FirewallDiagnoseColor}"
                DiagnoseDetail="{Binding FirewallDiagnoseDetail}"
                DiagnoseStatus="{Binding FirewallDiagnoseStatus}" />
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            Margin="0,8,0,32"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <ui:Button
                Command="{Binding AddApplicationRuleCommand}"
                Content="{DynamicResource Diagnose_Button_RepaireFirewall}"
                Visibility="{Binding AddFirewallRuleBtnVisiblity}" />
            <ui:Button
                Margin="8,0,0,0"
                Command="{Binding DiagnoseCommand}"
                Content="{DynamicResource Diagnose_Button_Diagnose}" />
        </StackPanel>
    </Grid>
</Page>
